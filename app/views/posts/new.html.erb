<h1>This is the New form page</h1>
<hr>

<div class="new-div">
<%= form_for(@new_post) do |f| %>
<%= f.label :title %> <br>
<%= f.text_field :title, :placeholder => "Title" %> <br> <br>
<%= f.label :body %> <br>
<%= f.text_area :body, :placeholder => "Your blog" %> <br> <br>
<%= f.submit "Create Post", :class => "btn btn-primary" %>
<% end %>
</div>